    <!-- JavaScript Logic -->
    <script>
        // --- Mobile Menu Logic ---
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');

        btn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });

        // --- Data Storage (Simulation) ---
        // In a real static site, we store data in JS memory or LocalStorage.
        // The "Download" function allows extraction to Excel/Drive.
        let memberData = [
            { name: "Admin User", email: "admin@wealthylabs.com", interest: "All", date: new Date().toLocaleDateString() }
        ];

        // --- Chart.js Poll Logic ---
        const ctx = document.getElementById('pollChart').getContext('2d');
        
        // Initial Data
        let pollData = {
            labels: ['DeFi 2.0', 'AI Trading', 'Global Macro', 'NFT Utility'],
            datasets: [{
                label: 'Votes',
                data: [12, 19, 8, 5], // Starting mock numbers
                backgroundColor: [
                    'rgba(245, 158, 11, 0.7)', // Amber
                    'rgba(51, 65, 85, 0.7)',   // Slate
                    'rgba(100, 116, 139, 0.7)', // Light Slate
                    'rgba(203, 213, 225, 0.7)'  // Grey
                ],
                borderColor: [
                    'rgba(245, 158, 11, 1)',
                    'rgba(51, 65, 85, 1)',
                    'rgba(100, 116, 139, 1)',
                    'rgba(203, 213, 225, 1)'
                ],
                borderWidth: 1
            }]
        };

        const pollChart = new Chart(ctx, {
            type: 'bar',
            data: pollData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            display: false
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.raw + ' Votes';
                            }
                        }
                    }
                }
            }
        });

        // Vote Function
        function vote(topic) {
            let index = 0;
            if (topic === 'AI') index = 1;
            if (topic === 'Macro') index = 2;
            if (topic === 'NFTs') index = 3;

            // Update Chart Data
            pollChart.data.datasets[0].data[index]++;
            pollChart.update();

            // Feedback UI
            const feedback = document.getElementById('vote-feedback');
            feedback.textContent = `Thanks for voting for ${topic === 'AI' ? 'AI Trading' : topic}!`;
            setTimeout(() => {
                feedback.textContent = '';
            }, 3000);
        }

        // --- Form Submission Logic ---
        const form = document.getElementById('memberForm');
        
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('userName').value;
            const email = document.getElementById('userEmail').value;
            const interest = document.getElementById('userInterest').value;
            
            // Add to local array
            memberData.push({
                name: name,
                email: email,
                interest: interest,
                date: new Date().toLocaleDateString()
            });

            // Feedback
            alert(`Welcome to the Lab, ${name}! Your details have been recorded locally.`);
            form.reset();
        });

        // --- CSV Export Logic (Save to Excel) ---
        document.getElementById('downloadBtn').addEventListener('click', function() {
            // 1. Convert memberData to CSV format
            const headers = ["Name", "Email", "Interest", "Date Joined"];
            const rows = memberData.map(member => [member.name, member.email, member.interest, member.date]);
            
            let csvContent = "data:text/csv;charset=utf-8,";
            
            // Add Header Row
            csvContent += headers.join(",") + "\r\n";
            
            // Add Data Rows
            rows.forEach(rowArray => {
                let row = rowArray.join(",");
                csvContent += row + "\r\n";
            });

            // 2. Create Download Link
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "wealthy_labs_members.csv");
            document.body.appendChild(link); // Required for FF
            
            // 3. Trigger Download
            link.click();
            document.body.removeChild(link);
        });

    </script>
    <!-- Visualization & Content Choices:
         - Chart.js Bar Chart: Chosen for the poll results because it allows easy visual comparison of votes.
         - Interactive Form: Uses Vanilla JS to capture data and push to a local array.
         - CSV Export: Since we cannot write directly to a user's Google Drive from a static HTML file without OAuth complexity, generating a CSV client-side is the standard "static" solution. The user can then drag-drop this file into Google Sheets.
         - Layout: Stacked sections (Hero -> About -> Interactive) guide the user from brand awareness to engagement.
    -->
</body>
</html>
